@using Mvc.Areas.ToDo.ViewComponents.PriorityItems
@model IEnumerable<ToDoItem>

@{
    ViewData["Title"] = "ToDo Controller - View Components";
}

<table>
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var todoItem in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => todoItem.Name)</td>
            <td>@Html.DisplayFor(model => todoItem.Priority)</td>
            <td>@Html.DisplayFor(model => todoItem.IsDone)</td>
        </tr>
    }
    </tbody>
</table>

<div>
    <!-- @await Component.InvokeAsync(nameof(PriorityItems),new { maxPriority = 5, isDone = true}) -->
    <vc:priority-items max-priority="2" is-done="false"/>
</div>

